{
  "compilerOptions": {
   
    "target": "es2020",                                    
    "module": "commonjs",                               
    "resolveJsonModule": true,                       
    "sourceMap": true,                                
       "outDir": "./dist",                        
       "rootDir": "./src",                       
    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                
  }
}
